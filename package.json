{
  "name": "typher",
  "productName": "Typher",
  "genericName": "Typher",
  "version": "1.1.0",
  "description": "Typographic text editor",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "lint": "xo src",
    "fix": "xo --fix src",
    "build": "electron-packager . --platform linux --arch x64 --out .dist/ --overwrite true --ignore='(\\/\\..*|\\.md$)' --icon=Typher",
    "deb64": "electron-installer-debian --src .dist/Typher-linux-x64/ --arch amd64 --config .debian.config.json"
  },
  "keywords": [
    "typograph",
    "yo",
    "editor"
  ],
  "author": {
    "name": "Vano Devium",
    "email": "vano@devium.me",
    "url": "https://www.devium.me/"
  },
  "license": "MIT",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "eyo-kernel": "^2.5.6",
    "typograf": "^6.14.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.61",
    "electron": "18.3.7",
    "electron-installer-debian": "^3.1.0",
    "electron-packager": "^15.4.0",
    "xo": "^0.44.0"
  },
  "xo": {
    "space": true,
    "rules": {
      "quotes": ["error", "double"],
      "unicorn/prefer-module": 0,
      "node/prefer-global/process": ["error", "always"]
    },
    "global": [
      "document",
      "process"
    ]
  }
}
